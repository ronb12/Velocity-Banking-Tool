{
  "name": "bradleys-finance-hub",
  "version": "2.1.0",
  "description": "Comprehensive financial management Progressive Web App",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:e2e": "node tests/e2e/run-all.mjs",
    "lint": "eslint src/**/*.js --ignore-pattern '*.html'",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "deploy": "npm run build && firebase deploy --only hosting",
    "analyze": "vite-bundle-visualizer",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:ios": "npm run build && npx cap sync ios && npx cap open ios",
    "cap:android": "npm run build && npx cap sync android && npx cap open android",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:update": "npm run build && npx cap sync"
  },
  "keywords": [
    "finance",
    "pwa",
    "debt-tracker",
    "budget",
    "savings"
  ],
  "author": "Bradley's Finance Hub",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@capacitor/preferences": "^7.0.2",
    "@capacitor/network": "^7.0.2",
    "@capacitor/storage": "^7.0.2",
    "@capacitor/splash-screen": "^7.0.2",
    "@vitejs/plugin-legacy": "^5.4.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.30.0",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^0.17.5"
  },
  "dependencies": {
    "firebase": "^9.23.0"
  }
}
