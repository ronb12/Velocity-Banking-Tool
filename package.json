{
  "name": "bradleys-finance-hub",
  "version": "2.1.0",
  "description": "Comprehensive financial management Progressive Web App",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:e2e": "node tests/e2e/run-all.mjs",
    "lint": "eslint src/**/*.js --ignore-pattern '*.html'",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "deploy": "npm run build && firebase deploy --only hosting",
    "analyze": "vite-bundle-visualizer"
  },
  "keywords": [
    "finance",
    "pwa",
    "debt-tracker",
    "budget",
    "savings"
  ],
  "author": "Bradley's Finance Hub",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.4.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^0.17.5"
  },
  "dependencies": {
    "firebase": "^9.23.0"
  }
}
