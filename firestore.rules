rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate data types
    function isValidDebt(data) {
      return data.keys().hasAll(['balance', 'name']) &&
             data.balance is number &&
             data.balance >= 0 &&
             data.name is string &&
             data.name.size() > 0 &&
             data.name.size() <= 100;
    }
    
    function isValidSavings(data) {
      return data.keys().hasAll(['balance', 'name']) &&
             data.balance is number &&
             data.balance >= 0 &&
             data.name is string &&
             data.name.size() > 0 &&
             data.name.size() <= 100;
    }

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // User settings subcollection
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
      
      // User debts subcollection
      match /debts/{debtId} {
        allow read, write: if isOwner(userId) && 
          (!exists(/databases/$(database)/documents/users/$(userId)/debts/$(debtId)) || 
           isValidDebt(request.resource.data));
      }
      
      // User savings subcollection
      match /savings/{savingId} {
        allow read, write: if isOwner(userId) && 
          (!exists(/databases/$(database)/documents/users/$(userId)/savings/$(savingId)) || 
           isValidSavings(request.resource.data));
      }
      
      // User income subcollection
      match /income/{incomeId} {
        allow read, write: if isOwner(userId);
      }
      
      // User assets subcollection
      match /assets/{assetId} {
        allow read, write: if isOwner(userId);
      }
      
      // User notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      // User activity log subcollection
      match /activity/{activityId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        // Prevent updates/deletes to maintain audit trail
        allow update, delete: if false;
      }
    }
    
    // Global settings - read only for authenticated users
    match /globalSettings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write (configure separately)
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
