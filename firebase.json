{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.log",
      "**/.git/**",
      "**/.git.backup/**",
      "**/tests/**",
      "**/test*.html",
      "**/test*.js",
      "**/*.md",
      "**/IMPLEMENTATION_SUMMARY.md",
      "**/SCREENSHOT_GUIDE.md",
      "**/README.md"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
